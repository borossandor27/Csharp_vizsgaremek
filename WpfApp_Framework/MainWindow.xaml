<Window x:Class="WpfApp_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dolgozók"
        Height="450"
        Width="900"
        Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- BAL OLDAL – LISTA -->
        <ListBox Grid.Column="0"
                 ItemsSource="{Binding Dolgozok}"
                 SelectedItem="{Binding SelectedDolgozo}"
                 DisplayMemberPath="TeljesNev"
                 Margin="0,0,10,0"/>

        <!-- JOBB OLDAL – RÉSZLETEK -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- KÉP -->
            <Image Grid.Row="0"
                   Width="120"
                   Height="120"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Left"
                   Source="{Binding SelectedDolgozo.ImageUrl}"
                   Stretch="UniformToFill"/>

            <!-- ADATOK -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Név:" Grid.Row="0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding SelectedDolgozo.TeljesNev, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Beosztás:" Grid.Row="1"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding SelectedDolgozo.Beosztas}"/>

                <TextBlock Text="Fizetés:" Grid.Row="2"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding SelectedDolgozo.Fizetes}"/>

                <TextBlock Text="Belépés:" Grid.Row="3"/>
                <DatePicker Grid.Row="3" Grid.Column="1"
                            SelectedDate="{Binding SelectedDolgozo.BelepesDate}"/>

                <TextBlock Text="Kilépés:" Grid.Row="4"/>
                <DatePicker Grid.Row="4" Grid.Column="1"
                            SelectedDate="{Binding SelectedDolgozo.KilepesDate}"/>
            </Grid>

            <!-- GOMBOK -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">

                <Button Content="Új"
                        Width="80"
                        Margin="5"/>

                <Button Content="Mentés"
                        Width="80"
                        Margin="5"
                        Click="button_update_Click"/>

                <Button Content="Törlés"
                        Width="80"
                        Margin="5"
                        Click="button_delete_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
