<Window x:Class="WpfApp_Framework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfApp_Framework.ViewModels"
        Title="Dolgozók"
        Height="450"
        Width="900">


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- BAL OLDAL: LISTA -->
        <ListBox Grid.Column="0"
         ItemsSource="{Binding DataContext.Dolgozok,
                               RelativeSource={RelativeSource AncestorType=Window}}"
         SelectedItem="{Binding DataContext.SelectedDolgozo,
                                RelativeSource={RelativeSource AncestorType=Window}}"
         DisplayMemberPath="TeljesNev"/>




        <!-- JOBB OLDAL -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ADATŰRLAP -->
            <StackPanel Grid.Row="0" Margin="0,0,0,10">

                <TextBlock Text="Dolgozó adatai"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

                <!-- KÉP -->
                <Image Width="140"
                   Height="140"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"
                   Stretch="UniformToFill"
                   Source="{Binding SelectedDolgozo.ImageUrl}"/>
                <TextBlock Text="Név"/>
                <TextBox Text="{Binding SelectedDolgozo.TeljesNev, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Beosztás" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SelectedDolgozo.Beosztas}"/>

                <TextBlock Text="Fizetés" Margin="0,10,0,0"/>
                <TextBox Text="{Binding SelectedDolgozo.Fizetes}"/>

             </StackPanel>

            <!-- GOMBOK -->
            <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Right">

                <Button Content="Frissít"
                Margin="5"
                Command="{Binding LoadCommand}"/>

                <Button Content="Mentés"
                Margin="5"
                Command="{Binding UpdateCommand}"/>

                <Button Content="Törlés"
                Margin="5"
                Command="{Binding DeleteCommand}"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
